# Copy to config/app.env and edit values for local development
# PHP built-in server host/port
APP_HOST=127.0.0.1
APP_PORT=8080

# Database (SQLite by default). For MySQL, use DSN like: mysql:host=localhost;dbname=gnp;charset=utf8mb4
DB_DSN=sqlite:./data/app.db
DB_USER=
DB_PASS=

# App settings
APP_ENV=dev
SESSION_NAME=gnp_session
CSRF_SECRET=change-me-dev
STAFF_DEMO_KEY=demo-staff

# i18n default locale
DEFAULT_LOCALE=en

# Demo seed toggle (used by setup script)
SEED_DEMO=true
